{
  "compilerOptions": {
    "strict": true,
    "outDir": "dist/",
    "sourceMap": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "target": "es5",
    "declaration": true,
    "removeComments": false,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "pretty": true,
    "esModuleInterop": true
  },
  "include": ["src"]
}
